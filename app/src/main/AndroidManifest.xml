<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ginteam.com.giftchoice">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/gift"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.PersonsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.NewPersonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.TestActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="DATABASE"
            android:value="sugar.db" />
        <meta-data
            android:name="VERSION"
            android:value="2.1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="ginteam.com.giftchoice" />

        <activity android:name=".view.activity.InfoAboutPersonActivity"></activity>
    </application>

</manifest>